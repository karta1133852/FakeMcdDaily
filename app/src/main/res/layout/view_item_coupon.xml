<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:orientation="horizontal"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginLeft="@dimen/padding_4"
  android:layout_marginTop="@dimen/padding_4"
  android:layout_marginRight="@dimen/padding_4"
  android:layout_marginBottom="@dimen/padding_4"
  style="@style/CardViewStyle" >
  
  <LinearLayout
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
    <android.support.constraint.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content" >
      

      <ImageView
        android:id="@+id/cover"
        android:scaleType="centerCrop"
        android:scrollY="-5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,132.99866:100"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
          <!--
          app:layout_widthPercent="100.0%"
          app:layout_aspectRatio="132.99866%"
          -->
      
      <TextView
        android:gravity="center_horizontal"
        android:id="@+id/status"
        android:background="@color/ok_blue"
        android:padding="@dimen/padding_4"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        app:layout_constraintTop_toBottomOf="@id/cover"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        
        android:text="@string/expired_time_status"
        style="@style/ChWhiteText" />
      
      <ImageView
        android:id="@+id/mask"
        android:background="@color/white_mask"
        android:visibility="visible"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
      
    </android.support.constraint.ConstraintLayout>
    
    <Button android:textAppearance="@style/ChBlackText.Large"
      android:id="@+id/btnRedeem_list_item"
      android:padding="@dimen/padding_16"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="兌 換 優 惠"
      android:visibility="visible"
      style="@style/Widget.AppCompat.Button.Borderless" />
    
    <LinearLayout
      android:id="@+id/layout_countDown"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:layout_gravity="center" >
      
      <TextView android:textAppearance="@style/ChBlackText.Large"
        android:gravity="left"
        android:layout_gravity="center"
        android:id="@+id/redeem_timer"
        android:padding="@dimen/padding_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/img_bottom_clock_n"
        android:drawablePadding="@dimen/padding_8"
        android:visibility="gone" /> <!--style="@style/Widget.AppCompat.Button.Borderless"-->
    </LinearLayout>
    
    <Button android:textAppearance="@style/ChBlackText.Large"
      android:textColor="@color/dark_gray"
      android:id="@+id/had_redeemed"
      android:padding="@dimen/padding_16"
      android:clickable="false"
      android:background="@color/colorWhite"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="已 兌 換"
      android:visibility="gone"
      style="@style/Widget.AppCompat.Button.Borderless" />
    
    <Button android:textAppearance="@style/ChBlackText.Large"
      android:textColor="@color/dark_gray"
      android:id="@+id/expired"
      android:padding="@dimen/padding_16"
      android:clickable="false"
      android:background="@color/colorWhite"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="已 截 止"
      android:visibility="gone"
      style="@style/Widget.AppCompat.Button.Borderless" />
  
  </LinearLayout>

</android.support.v7.widget.CardView>