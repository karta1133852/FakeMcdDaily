<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/colorAppBg"
  app:layout_behavior="@string/appbar_scrolling_view_behavior"
  tools:context=".Activity.MainActivity"
  tools:showIn="@layout/app_bar_main">
  
  <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    
    app:layout_constraintBottom_toTopOf="@id/linearLayoutBottom"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" >
    
    <android.support.v7.widget.RecyclerView
      android:id="@+id/cylist_show_data"
      android:layout_width="match_parent"
      android:layout_height="490dp"
      android:background="@color/colorTransparent" />
  
  </LinearLayout>
  
  <LinearLayout
    android:id="@+id/linearLayoutBottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:gravity="bottom"
    android:orientation="horizontal"
    
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="1"
    tools:layout_editor_absoluteX="0dp">
    
    <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:background="?android:attr/selectableItemBackground"
      android:drawableTop="@drawable/ic_coupon"
      android:paddingBottom="10dp"
      android:paddingTop="5dp"
      android:text="@string/tab_coupon" />
    
    <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:background="?android:attr/selectableItemBackground"
      android:drawableTop="@drawable/ic_sticker"
      android:paddingBottom="10dp"
      android:paddingTop="5dp"
      android:text="@string/tab_sticker"
      android:textColor="#898989" />
    
    <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:background="?android:attr/selectableItemBackground"
      android:drawableTop="@drawable/ic_vip"
      android:paddingBottom="10dp"
      android:paddingTop="5dp"
      android:text="@string/tab_vip"
      android:textColor="#898989"/>
  
  </LinearLayout>

</android.support.constraint.ConstraintLayout>